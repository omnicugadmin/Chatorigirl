  <script>
    const EDGE_FUNCTION_URL = "https://oakssvcgsgpqydrdpdhn.supabase.co/functions/v1/smooth_functionv2";
    const SUPABASE_ANON_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im9ha3NzdmNnc2dwcXlkcmRwZGhuIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDY1NDExMzUsImV4cCI6MjA2MjExNzEzNX0.hM0jVSTXs9TzXfeq2Z-b6IeXIdz68VBTE2aBWrh2RYk";

    const rewardBtn = document.getElementById("reward-btn");
    const fancyMessage = document.getElementById("fancy-message");
    const modal = document.getElementById("plate-modal");
    const plateInput = document.getElementById("plate-input");
    const submitPlateBtn = document.getElementById("submit-plate");

  // üìù Universal Logger
  async function logEvent(level, message, data = {}) {
    const logEntry = {
      level,
      message,
      data,
      url: window.location.href,
      userAgent: navigator.userAgent,
      timestamp: new Date().toISOString(),
    };

    // console par log
    console[level](`[Frontend ${level}]`, message, data);

    submitPlateBtn.addEventListener("click", async () => {
      const plateNo = plateInput.value.trim();
      if (!plateNo) {
        alert("üö´ Plate number is required!");
        return;
      }

  function showMessage(msg) {
    fancyMessage.textContent = msg;
    fancyMessage.style.display = "block";
    logEvent("info", "Message shown to user", { msg });
  }

  rewardBtn.addEventListener("click", () => {
    logEvent("info", "Reward button clicked");
    plateInput.value = "";
    modal.style.display = "flex";
  });

  submitPlateBtn.addEventListener("click", async () => {
    const plateNo = plateInput.value.trim();
    if (!plateNo) {
      alert("üö´ Plate number is required!");
      logEvent("warn", "Plate number missing");
      return;
    }

    modal.style.display = "none";
    rewardBtn.disabled = true;
    rewardBtn.textContent = "‚è≥ Checking...";
    logEvent("info", "Submitting plate number", { plateNo });

    const storedData = JSON.parse(localStorage.getItem("rewardClaim"));
    if (storedData && storedData.plate === plateNo) {
      logEvent("info", "User already claimed reward", storedData);
      showMessage(`‚ú® You already claimed ${storedData.reward} pani puri FREE! ‚ú®`);
      rewardBtn.textContent = "üéâ Reward Claimed";
      return;
    }

    try {
      const response = await fetch(EDGE_FUNCTION_URL, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": `Bearer ${SUPABASE_ANON_KEY}`
        },
        body: JSON.stringify({
          action: "get_reward",
          plate_no: plateNo
        })
      });

      const result = await response.json();
      logEvent("info", "API response received", result);

      if (!response.ok) {
        showMessage(`‚ö†Ô∏è ${result.error || "Something went wrong."}`);
        rewardBtn.textContent = "Try Again";
        rewardBtn.disabled = false;
        logEvent("error", "API error", { status: response.status, result });
        return;
      }

      localStorage.setItem("rewardClaim", JSON.stringify({
        reward: result.reward,
        plate: plateNo
      }));

      const displayMsg = result.message || (result.reward === 0
        ? "üò¢ Oops! You got 0 pani puri free. Better luck next time!"
        : `‚ú® Congratulations! You got ${result.reward} pani puri FREE! ‚ú®`);

      showMessage(displayMsg);
      rewardBtn.textContent = "üéâ Reward Claimed";

    } catch (error) {
      console.error(error);
      logEvent("error", "Network/API call failed", { error: error.message });
      showMessage("‚ö†Ô∏è Network error. Please try again.");
      rewardBtn.textContent = "Try Again";
      rewardBtn.disabled = false;
    }
  });

  // Global error capture
  window.addEventListener("error", (e) => {
    logEvent("error", "Frontend JS error", { message: e.message, file: e.filename, line: e.lineno });
  });
  window.addEventListener("unhandledrejection", (e) => {
    logEvent("error", "Unhandled promise rejection", { reason: e.reason });
  });
</script>
